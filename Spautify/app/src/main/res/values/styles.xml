<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Login_Title_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">280dp</item>
    </style>


    <style name="Login_TextInputLayout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">280dp</item>
    </style>

    <style name="TextInputLayout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextInputLayout_HintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/cyan</item>
        <item name="android:textColor">@color/cyan</item>
    </style>
    <!--
    Removed since it really doesn't look good.
         <android.support.design.widget.TextInputLayout
             style="@style/TextInputLayout_style"
             app:hintTextAppearance="@style/TextInputLayout_HintStyle"
             >
         </android.support.design.widget.TextInputLayout>

    -->

    <style name="Login_Text_Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:maxWidth">280dp</item>

        <item name="android:background">@android:drawable/editbox_background</item>
    </style>


    <style name="Login_Button_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">280dp</item>

        <!--  no marginRight -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg_grey_trans50</item>
    </style>


    <!--  For Settings pages, defines the style of the category tites, such as
    	Broadcast Settings, Light Settings, etc. -->
    <style name="Settings_CategoryTitle_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/cyan</item>
        <item name="android:minHeight">30sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Text_Large_Black_Style">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Text_ShowcaseTitle">
        <item name="android:textColor">#27bfcd</item>
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Text_Large_White_Style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Text_Medium_Black_Style">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Text_Medium_White_Style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Text_Small_Subtitle_Style">
        <item name="android:textColor">@color/med_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Text_Small_Subtitle_White_Style">
        <item name="android:textColor">@color/white_grey_trans75</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Broadcast_AlertDialog_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>


    <style name="Divider_Grey_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/med_grey_trans50</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <!--  For some unknown reason, setting drawable here makes it not render anything... -->
    </style>


    <style name="Settings_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/cyanminus</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>

        <!--  For some unknown reason, setting drawable here makes it not render anything... -->
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


</resources>
