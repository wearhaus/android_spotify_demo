<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dots="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black_really_dark_grey"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/bg_black_really_dark_grey"
        >

        <include layout="@layout/toolbar_navbar"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_below="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"

            android:elevation="6dp"
            app:tabIndicatorColor="@color/cyan"
            />



        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_below="@+id/tab_layout"
            android:layout_above="@+id/music_player_bar"

            android:background="@color/bg_black_really_dark_grey"
            >
        </android.support.v4.view.ViewPager>

        <com.example.steven.spautify.MusicPlayerBar
            android:id="@+id/music_player_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:elevation="6dp"
            />




        <TextView
            android:id="@+id/disabled_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            style="@style/Text_Small_Subtitle_White_Style"
            />


        <Button
            android:id="@+id/create_player"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disabled_text"
            android:text="Create Player"
            android:background="@drawable/button_bg_cyan"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_margin="10dp"
            />

        <pl.tajchert.sample.DotsTextView
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:id="@+id/dots"
            android:textSize="50dp"
            android:textColor="#DDFFFFFF"
            dots:autoplay="true"
            dots:period="1000"
            />


    </RelativeLayout>

    <!-- The navigation drawer
    	 Should be last so it can be drawn with highest z value
    -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/button_bg_toolbar_default"

        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/bg_black_really_dark_grey"/>




</android.support.v4.widget.DrawerLayout>



