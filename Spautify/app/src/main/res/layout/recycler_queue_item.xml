<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    >

    <ImageView
        android:id="@+id/img"

        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="5dp"

        />

    <ImageButton
        android:id="@+id/stuffs"

        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:background="@drawable/button_bg_transparent_tocyan"
        android:clickable="false"
        />

    <LinearLayout
        android:id="@+id/track_stuff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/stuffs"
        android:layout_toRightOf="@+id/img"

        android:clickable="false"
        >
        <TextView
            android:id="@+id/track_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"

            style="@style/Text_Medium_White_Style"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/track_author"

            style="@style/Text_Small_Subtitle_White_Style"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</RelativeLayout>
