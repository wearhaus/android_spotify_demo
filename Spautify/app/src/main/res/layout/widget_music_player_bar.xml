<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/blue_dark_grey"
    >
    <!-- android:layout_height="96dp"-->


    <RelativeLayout
        android:id="@+id/playback_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img"

            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

        <LinearLayout
            android:id="@+id/track_stuff"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_toLeftOf="@+id/playback_buttons_layout"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="5dp"
            >


            <TextView
                android:id="@+id/track_title"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/track_author"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/track_time"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"

                android:textSize="13sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/playback_buttons_layout"

            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            android:layout_alignParentRight="true"

            android:layout_above="@+id/shuffle_layout"
            android:layout_marginBottom="10dp"
            >

            <ImageButton
                android:id="@+id/play_pause"

                android:layout_width="32dp"
                android:layout_height="32dp"

                android:src="@drawable/ic_action_play_w"
                android:scaleType="fitCenter"
                android:background="@drawable/button_bg_transparent_tocyan"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/skip_back"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_action_rewind_w"

                    android:background="@drawable/button_bg_transparent_tocyan"
                    />



                <ImageButton
                    android:id="@+id/skip_forward"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_action_fast_forward_w"
                    android:background="@drawable/button_bg_transparent_tocyan"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/logged_out_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logged_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loading_container"

        android:layout_centerInParent="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        />


</RelativeLayout>
