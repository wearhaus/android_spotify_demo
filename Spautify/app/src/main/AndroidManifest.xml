<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.steven.spautify"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>

    <application
        android:name=".AppApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        // Needed for LoginActivity to work
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <service android:name=".musicplayer.WPlayerService"/>

        <activity
            android:name=".MusicActivity"
            android:label="@string/title_activity_music">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".CurrentSongActivity"
            android:label="@string/title_activity_current_song"
            android:parentActivityName=".MusicActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>

        <activity
            android:name=".ViewSongsActivity"
            android:label="ViewPlaylistActivity"
            android:parentActivityName=".MusicActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>
        <activity
            android:name=".ViewArtistActivity"
            android:label="ViewArtistActivity"
            android:parentActivityName=".MusicActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="SearchActivity"
            android:windowSoftInputMode="adjustNothing"
            android:parentActivityName=".MusicActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>
        <activity
            android:name=".ViewAlbumActivity"
            android:label="ViewAlbumActivity"
            android:parentActivityName=".MusicActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MusicActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MusicActivity" />
        </activity>
    </application>

</manifest>
